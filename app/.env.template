# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///app.db
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@komunitech.id

# Admin Configuration
ADMIN_EMAIL=admin@komunitech.id

# Feature Flags
ENABLE_EMAIL_VERIFICATION=false
ENABLE_NOTIFICATIONS=true
ENABLE_API=false
ENABLE_AUDIT_LOG=true

# Logging
LOG_LEVEL=INFO
LOG_TO_STDOUT=false

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp

# Pagination
ITEMS_PER_PAGE=12
ITEMS_PER_PAGE_ADMIN=20

# Security
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
WTF_CSRF_ENABLED=true

# Application Settings
APP_NAME=KomuniTech
APP_DESCRIPTION=Platform untuk komunitas menyuarakan kebutuhan mereka
APP_VERSION=1.0.0

# Optional: Elasticsearch for advanced search
# ELASTICSEARCH_URL=http://localhost:9200

# Optional: Sentry for error tracking
# SENTRY_DSN=your-sentry-dsn

# Optional: AWS S3 for file storage
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_REGION=us-east-1